.post
    margin 5px
    margin-bottom 20px
    border 1px solid #DDD
    border-radius 15px
    padding 5px
    .post-tags-list
        vertical-align top
        padding 5px
        .post-tag-list-item
            float left
            display inline-block
            padding 2px 6px
            margin 2px 4px
            border 1px solid black
            a
                font bold small-caps 1em Arial, sans-serif
            &.active
                border-color red
                a
                    color red
    .post-title
        text-align center
    .post-content
        p
            font-family Helvetica
#postContent
    min-height 200px

